@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-2">
    <div class="col-sm-6">
        <div class="card mb-4">
            <div class="card-header"><b>Ventas Semanales</b></div>
            <div class="card-body">
                <canvas id="chartVentas" style="max-height:250px"></canvas>
