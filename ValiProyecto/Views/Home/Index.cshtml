                    const values = dataJson.map((item) => { return item.cantidad })

                    const data = {
                        labels: labels,
                        datasets: [{
                            label: 'Cantidad',
                            data: values,
                            backgroundColor: [
                                'rgb(255, 99, 132)',
                                'rgb(54, 162, 235)',
                                'rgb(255, 205, 86)',
                                "#01AF40",
                                "#33FF93"
                            ],
                            hoverOffset: 5
                        }]
                    };

                    const config = {
                        type: 'doughnut',
                        data: data,
                    }


                    const canvasDona = document.getElementById("chartProductos");

                    const graficoDona = new Chart(canvasDona, config)

                }).catch((error) => {
                    console.log("error")
                })
        }

