@model IEnumerable<ValiProyecto.Models.DetallesVenta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="sweetalert2.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
       
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            
        </nav>
        
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
       
        </aside>

      
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
             
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <!-- Menú lateral -->
                        <div class="col-md-3">
                            <!-- Contenido del menú existente ... -->
                            <nav class="mt-2">
                                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                                    <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                                   

                                    <a href="/usuarios" class="nav-link ">
                                            <button type="submit" class="btn btn-secondary" style="width: 170px"> Usuarios</button>
                                    </a>

                                    <a href="/clientes" class="nav-link ">
                                            <button type="submit" class="btn btn-secondary" style="width: 170px"> Clientes</button>
                                    </a>

                                    <a href="/proveedores" class="nav-link ">
                                            <button type="submit" class="btn btn-secondary" style="width: 170px"> Proveedores</button>
                                    </a>

                                    <a href="/categorias" class="nav-link ">
                                        <button type="submit" class="btn btn-secondary" style="width: 170px"> Categorías</button>
                                    </a>

                                    <a href="/productos" class="nav-link ">
                                        <button type="submit" class="btn btn-secondary" style="width: 170px"> Productos</button>
                                    </a>
                                    <a href="/ordencompras" class="nav-link ">
                                        <button type="submit" class="btn btn-secondary" style="width: 170px">Ordenes de Compras</button>
                                    </a>
                                    <a href="/compras" class="nav-link ">
                                        <button type="submit" class="btn btn-secondary" style="width: 170px"> Compras</button>
                                    </a>
                                   
                                    <a href="/ventas" class="nav-link ">
                                        <button type="submit" class="btn btn-info btn-sm" style="width: 170px"> Ventas</button>
                                    </a>
                                    
                                </ul>
                            </nav>
                        </div>

                        <!-- Tabla de clientes (alineada a la derecha) -->
                        <div class="col-md-9">
                            <section class="content-header">
                                <div class="container-fluid">
                                    <div class="row mb-2">
                                        <div class="col-sm-6">
                                            <h1>Detalle de Venta</h1>
                                            <br>
                                            <form class="d-flex" role="search">
                                                <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                                                <button class="btn btn-info btn-sm" type="submit">
                                                    <span class="material-symbols-outlined">
                                                        search
                                                    </span>
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-sm-6">
                                            <ol class="breadcrumb float-sm-right">
                                            </ol>
                                        </div>
                                    </div>
                                </div><!-- /.container-fluid -->
                            </section>

                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title"></h3>
                                    <div>
                                        <a asp-action="Create" class="btn btn-success btn-sm">NUEVO DETALLE DE VENTA</a>
                                    </div>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta)
            </th>
                                                                                             
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                   
                                                    <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venta.IdVenta)
            </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.DetalleVentaId" class="btn btn-warning btn-sm">
                                                            <i class="fas fa-pencil-alt"></i>
                                                            Editar
                                                        </a>
                                                        <a asp-action="Details" asp-route-id="@item.DetalleVentaId" class="btn btn-secondary btn-sm">
                                                            <i class="fas fa-pencil-alt"></i>
                                                            Detalle
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.DetalleVentaId" class="btn btn-danger btn-sm fas fa-trash">
                                                            Eliminar
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Contenido de la barra lateral de control existente ... -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- Scripts y cierre de etiquetas HTML existentes ... -->
</body>
</html